{
  "info": {
    "id": "tools/git",
    "version": "2.31.0",
    "priority": 20
  },
  "demands": {
    "windows and x64": {
      "unless": {
        "from": [
          "$host.Path",
          "$host.ProgramFiles/git/**"
        ],
        "where": "git.exe",
        "run": "\"$0\" --version",
        "select": "/git version (\\d+\\.\\d+)\\.\\d*/ig",
        "is": "'2.31' === $1",
        "message": "using discovered git $0",
        "exports": {
          "paths": {
            "path": "$0/.."
          },
          "tools": {
            "git": "$0"
          }
        }
      },
      "error": "This requires git 2.31.* installed\n"
    },
    "linux": {
      "unless": {
        "from": "$host.PATH",
        "where": "git",
        "run": "$0 --version",
        "matches": "/git version (\\d+\\.\\d+)\\.\\d*/ig",
        "is": "'2.31' === $1",
        "exports": {
          "paths": {
            "path": "$0/.."
          },
          "tools": {
            "python": "$",
            "venv": "-m venv"
          }
        }
      },
      "error": "This requires git 2.31 to be installed at the system level.\n"
    }
  }
}